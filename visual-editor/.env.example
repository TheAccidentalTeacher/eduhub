# Azure Integration Environment Variables
# Copy this to .env.local and fill in your Azure service details

# Azure Content Safety (for checking image appropriateness)
REACT_APP_AZURE_CONTENT_SAFETY_ENDPOINT=https://your-region.api.cognitive.microsoft.com
REACT_APP_AZURE_CONTENT_SAFETY_KEY=your-content-safety-key

# Azure AI Search (for image discovery)
REACT_APP_AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
REACT_APP_AZURE_SEARCH_KEY=your-search-admin-key

# Azure Translator (for multi-language support)
REACT_APP_AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
REACT_APP_AZURE_TRANSLATOR_KEY=your-translator-key

# Azure Region (e.g., eastus, westus2)
REACT_APP_AZURE_REGION=eastus

# Optional: Azure Static Web Apps configuration
REACT_APP_SWA_CLI_APP_LOCATION=.
REACT_APP_SWA_CLI_OUTPUT_LOCATION=dist
